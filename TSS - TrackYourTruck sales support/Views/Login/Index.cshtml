@using System.Configuration
@model TSS.Models.Login
@{
    Layout = null;
    ViewBag.Title = "TSS - TrackYourTruck sales support";
    string version = System.Configuration.ConfigurationManager.AppSettings["version"];
}
<script src="@Url.Content("~/Scripts/Libs/jquery/jquery-1.8.3.min.js")?@version" type="text/javascript"></script>

@*<script src="@Url.Content("~/Scripts/Libs/kendo/kendo.all.min.js")?@version" type="text/javascript"></script>*@
@*<script src="@Url.Content("~/Scripts/Libs/kendo/update/kendo.core.min.js")?@version" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Libs/kendo/update/kendo.data.min.js")?@version" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Libs/kendo/update/kendo.sortable.min.js")?@version" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Libs/kendo/update/kendo.grid.min.js")?@version" type="text/javascript"></script>*@
<script src="@Url.Content("~/Scripts/Libs/kendo/update/kendo.grid.minimal.js")?@version" type="text/javascript"></script>

<link href="@Url.Content("~/Content/bootstrap/css/bootstrap.css")?@version" rel="stylesheet" type="text/css" />
@*<link href="@Url.Content("~/Content/bootstrap/css/bootstrap-responsive.css")?@version" rel="stylesheet" type="text/css" />*@
<link href="@Url.Content("~/Content/bootstrap/css/bootstrap-responsive.min.css")?@version" rel="stylesheet" type="text/css" />
<link href="@Url.Content("~/Content/typica-login.css")?@version" rel="stylesheet" type="text/css" />
<div class="container">
    <div id="login-wraper">
        @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { @class = "form login-form" }))
        {
            <legend>Log in to <span class="blue">TSS</span></legend>
            <div class="body">
                @Html.ValidationSummary()
                <label>
                    Username</label>
                @Html.TextBoxFor(x => x.UserName, new { style = "height:auto;" })
                <label>
                    Password</label>
                @Html.PasswordFor(x => x.Password, new { style = "height:auto;" })
            </div>
            <div class="footer">
                <label class="checkbox inline hidden">
                    <input type="checkbox" id="inlineCheckbox1" value="option1">
                    Remember me
                </label>
                <button type="submit" value="Login" class="btn btn-success">
                    Login</button>
            </div>
        }
    </div>
</div>
